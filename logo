#!/bin/sh

MAGENTA="\e[35m"
CYAN="\e[36m"
ENDCOLOR="\e[0m"

# Загальний час завантаження (в секундах)
TOTAL_TIME=2
# Кількість рядків
LINES=17
# Затримка на кожен рядок
DELAY=$(echo "$TOTAL_TIME / $LINES" | bc -l)

# Функція для програвання тексту з затримкою
type_effect() {
  for line in "$@"; do
    echo -e "$line"
    sleep $DELAY
  done
}

echo -e "${MAGENTA}"

# Текст, що з'являється поступово
type_effect \
  "                            W E L C O M E   T O   T H E                            " \
  "                   ██████╗██████╗  ██╗   ██╗██████╗ ████████╗ ██████╗                   " \
  "                  ██╔════╝██╔══██╗ ╚██╗ ██╔╝██╔══██╗╚══██╔══╝██╔═══██╗                  " \
  "                  ██║     ██████╔╝  ╚████╔╝ ██████╔╝   ██║   ██║   ██║                  " \
  "                  ██║     █████╔═╝   ╚██╔╝  ██╔═══╝    ██║   ██║   ██║                  " \
  "                  ╚██████╗██║ ██      ██║   ██║        ██║   ╚██████╔╝                  " \
  "                   ╚═════╝╚═╝ ╚═╝     ╚═╝   ╚═╝        ╚═╝    ╚═════╝                   " \
  "                                                              ██████╗  ██████╗  ██████╗ ████████╗ █████╗██╗            " \
  "                                                             ██╔══██╗██╔═══██╗ ██╔══██╗╚══██╔══╝██╔══██╗██║            " \
  "                                                             ██████╔╝██║   ██║ ██████╔╝   ██║   ███████║██║            " \
  "                                                             ██╔═══╝ ██║   ██║ █████╔═╝   ██║   ██╔══██║██║            " \
  "                                                             ██║     ╚██████╔╝ ██║ ██     ██║   ██║  ██║███████╗       " \
  "                                                             ╚═╝      ╚═════╝  ╚═╝ ╚═╝    ╚═╝   ╚═╝  ╚═╝╚══════╝       " \
  "                               ☄️  Enter the Crypto Portal to explore               " \
  "                               🌐  Nodes, Depines, Blockchain Testing              " \
  "                               🔐  Secure. Decentralized. Limitless.              " \
  "                              ░▒▓█  C R Y P T O   P O R T A L  █▓▒░" \
  "══════════════════════════════  [ web3 assist team ]  ═════════════════════════════"

echo -e "${ENDCOLOR}"
