#!/bin/sh

MAGENTA="\e[35m"
CYAN="\e[36m"
ENDCOLOR="\e[0m"

# –ó–∞–≥–∞–ª—å–Ω–∏–π —á–∞—Å –∑–∞–≤–∞–Ω—Ç–∞–∂–µ–Ω–Ω—è (–≤ —Å–µ–∫—É–Ω–¥–∞—Ö)
TOTAL_TIME=2
# –ö—ñ–ª—å–∫—ñ—Å—Ç—å —Ä—è–¥–∫—ñ–≤
LINES=17
# –ó–∞—Ç—Ä–∏–º–∫–∞ –Ω–∞ –∫–æ–∂–µ–Ω —Ä—è–¥–æ–∫
DELAY=$(echo "$TOTAL_TIME / $LINES" | bc -l)

# –§—É–Ω–∫—Ü—ñ—è –¥–ª—è –ø—Ä–æ–≥—Ä–∞–≤–∞–Ω–Ω—è —Ç–µ–∫—Å—Ç—É –∑ –∑–∞—Ç—Ä–∏–º–∫–æ—é
type_effect() {
  for (( i=0; i<${#1}; i++ )); do
    echo -n "${1:$i:1}"
    sleep $DELAY
  done
}

echo -e "${MAGENTA}"

# –¢–µ–∫—Å—Ç, —â–æ –∑'—è–≤–ª—è—î—Ç—å—Å—è –ø–æ—Å—Ç—É–ø–æ–≤–æ
type_effect "                            W E L C O M E   T O   T H E                            "
echo ""
